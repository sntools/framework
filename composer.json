{
    "name": "sntools/framework",
    "description": "Man-Machine Interface framework, using MVC",
    "type": "library",
    "keywords": ["framework", "interface", "mvc"],
    "authors": [
        {
            "name": "Samy NAAMANI",
            "email": "samy@namani.net"
        }
    ],
    "require": {
        "PHP": ">=5.3",
        "sntools/core": "*",
        "twig/twig": "*"
    },
    "autoload": {
        "psr-4": {
            "SNTools\\Framework\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5",
        "phpunit/phpunit-skeleton-generator": "~2.0"
    },
    "autoload-dev": {
        "psr-4": {
            "SNTools\\Types\\Tests\\": "tests/"
        }
    }
}
